{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "es6",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "strictFunctionTypes": false
  },
  "include": ["src"],
  "exclude": ["dist"]
}
